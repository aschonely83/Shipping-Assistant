<div id="<%= dom_id retailer %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= retailer.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Schedule:</strong>
    <%= retailer.schedule %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this retailer", retailer, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this retailer', edit_retailer_path(retailer), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
